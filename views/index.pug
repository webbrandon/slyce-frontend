extends layout

block content
  div.cover-heading#payPie
    div.float-left
      img(src="/images/icons/arrow-left.svg", width="100", height="100")#backPay
    div.table-responsive(style="display: inline-block;")
      form#claimList
        div.form-group
          h1.float-left Claim a slyce:
          table.table.table-striped.table-dark
            tbody#pieItems
          br
          div.dropdown
            button.btn.btn-secondary.btn-lrg.dropdown-toggle.dropdown-toggle-split#dLabel(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
            div.dropdown-menu(aria-labelledby="dLabel")
              button.dropdown-item(type="button") Apple Pay
              button.dropdown-item(type="button") Visa
              button.dropdown-item(type="button") MasterCard
              button.dropdown-item(type="button") PayPal
              button.dropdown-item(type="button") Zello
  div.cover-heading#pay
    div.float-left
      img(src="/images/icons/arrow-left.svg", width="100", height="100")#backCutPay
    div.table-responsive(style="display: inline-block;")
      div.form-group
        h1.float-left Pay your slyce of the pie:
        table.table.table-dark
          tbody#pies
  div.cover-heading#cut
    div.float-left
      img(src="/images/icons/arrow-left.svg", width="100", height="100")#backCutPay2
    form#take-photo
      div.form-group
        video#player(autoplay)
        canvas#canvas(width=600, height=600, zoom=.1)
        br
        br
        button.btn.btn-secondary.btn-lrg#capture(style="height: 50px;width: 65%;margin: auto;") Slyce It!
        p#upload-syncing(style="display: None; font-size: 30px;") Cutting your pie, please wait ...
        script(src="/javascripts/camera.js")
        hr
        button.btn.btn-secondary.btn-lrg#selectFile(style="height: 50px;width: 65%;margin: auto;") Upload local image.
  div.cover-heading#cutPay(style="margin-top: 300px;")
    div(style="display: inline-block;")
      a#cutLink(href="#cut")
        div
          img(src="/images/icons/pie-chart-fill.svg", width="250", height="250")
        p.lg-font Cut
    div(style="display: inline-block;")
      a#payLink(href="#pay")
        div
          img(src="/images/icons/credit-card.svg", width="250", height="250")
        p.lg-font Pay
  div.cover-heading#intro(style="margin-top: 300px;")
    img(src="/images/slyce-logo-2.png", style="margin-bottom: 80px;")
    form#get-name
      div.form-group
        input.form-control.form-control-lg.col-form-label-lg#userId(placeholder="User ID", style="height: 100px;width: 65%;margin: auto;margin-bottom:40px;")
        button.btn.btn-secondary.btn-lrg#beginBtn(style="height: 50px;width: 65%;margin: auto;") Submit
        p.text-danger#introError
